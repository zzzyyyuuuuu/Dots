configuration {
    modi:                        "drun";
    font:                        "JetBrainsMono Nerd Font 10";
    show-icons:                  true;
    drun-display-format:         "{name}";
    hover-select:                true;
    me-select-entry:             "MouseSecondary";
    me-accept-entry:             "MousePrimary";
    window-format:               "{w} · {c} · {t}";
    dpi:                         1;
}

* {
    background-alt:              rgba(51, 51, 51, 0.5);
    selected:                    rgba(255,255,255,0.16);
    active:                      rgba(255,255,255,0.10);
    urgent:                      rgba(255,80,80,0.28);
    text-color:                  #fff;
    text-selected:               rgba(255,255,255,0.98);
    border-color:                rgba(0,0,0,0.35);
}

/* ───────── Window ───────── */

window {
    enabled:                     true;
    fullscreen:                  false;
    transparency:                "real";
    cursor:                      "default";

    location:                    center;
    anchor:                      center;
    width:                       75%;

    spacing:                     0px;
    border:                      1px;
    border-radius:               20px;

    /* IMPORTANT FOR BLUR */
    background-color:            rgba(46, 45, 45, 0.5);
    border-color:                rgba(255, 255, 255, 0.45);
}

/* ───────── Layout ───────── */

mainbox {
    enabled:                     true;
    children:                    [ "inputbar", "listview" ];
    background-color:            transparent;
}

/* ───────── Input ───────── */

inputbar {
    enabled:                     true;
    padding:                     5px;
    margin:                      10px;

    text-color:                  rgba(255,255,255,0.55);
    background-color:            transparent;

    children:                    [ "entry" ];
}

entry {
    enabled:                     true;
    text-color:                  inherit;
    background-color:            transparent;
}

/* ───────── Grid ───────── */

listview {
    enabled:                     true;
    columns:                     5;
    lines:                       1;

    padding:                     26px 36px;
    spacing:                     20px;

    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;

    layout:                      vertical;
    fixed-height:                true;
    fixed-columns:               true;

    background-color:            transparent;
    border:                      0px;
}

/* ───────── Tiles ───────── */

element {
    enabled:                     true;
    orientation:                 vertical;
    expand:                      false;

    padding:                     5px 10px;
    border-radius:               10px;
    cursor:                      pointer;
    text-color:                  #fff;
    background-color:            rgba(255,255,255,0.04);
}

element normal.normal {
    background-color:            rgba(255,255,255,0.06);
        text-color:                  #fff;
}

element normal.active {
    background-color:            rgba(255,255,255,0.10);
        text-color:                  #fff;
}

element normal.urgent {
    background-color:            rgba(255,60,60,0.25);
        text-color:                  #fff;
}

element selected.normal {
    background-color:            rgba(255,255,255,0.18);
    text-color:                  #fff;
}

element alternate.normal {
    background-color:            rgba(255,255,255,0.05);
        text-color:                  #fff;
}

/* ───────── Icon & Text ───────── */

element-icon {
    size:                        50%;
    padding:                     0px;
    background-color:            transparent;
}

element-text {
    padding-left:                10px;
    background-color:            transparent;
}
